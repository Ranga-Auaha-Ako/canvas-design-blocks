/* Create context to query against for container queries */
.user_content,
.mceContentBody {
  container-type: inline-size;
}

.cgb-component i[class*="icon-"].icon-TextSize:before {
  font-size: 1em;
}

body.cdb--dark .cgb-component {
  --bcbackground-0: initial;
  --bcbackground-1: initial;
  --bcbackground-2: initial;
  --bcborders: initial;
  --bclinks: initial;
  --bcsidebar: initial;
  --bcsidebar-text: initial;
  --bctext-0: initial;
  --bctext-1: initial;
  --bctext-2: initial;
}
