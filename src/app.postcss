@tailwind base;
@tailwind components;
@tailwind utilities;

button.Button {
  @apply my-2;
  @apply bg-uni-blue text-white py-2 px-4 rounded border-black border border-solid border-opacity-30 focus:ring-2 ring-offset-4;
  &:hover {
    @apply bg-uni-blue-dark;
  }
  &.Button--icon-action {
    @apply bg-transparent text-uni-gray-500 border-0;
    @apply text-2xl leading-none p-0 px-1;
  }
  &.Button--small {
    @apply text-sm py-1 px-2;
  }
}
